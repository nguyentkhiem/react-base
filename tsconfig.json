{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext",
      "es6",
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "newLine": "lf",
    "jsx": "react-jsx",
    "baseUrl": "./src",
    "paths": {
      "shared/*": ["shared/*"],
      "services/*": ["services/*"],
      "context/*": ["context/*"],
      "pages/*": ["pages/*"],
      "app/*": ["app/*"],
    },
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
    ]
  },
  "include": ["src", "**/*.ts", "**/*.tsx"],
  "exclude": [
    "node_modules",
  ]
}
